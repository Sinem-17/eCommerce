@model IEnumerable<Category>
<header class="header-section">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="col-lg-2 text-center text-lg-left">
                    <!-- logo -->
                    <a href="./index.html" class="site-logo">
                        <img src="img/logo.png" alt="">
                    </a>
                </div>
                <div class="col-xl-6 col-lg-5">
                    <form class="header-search-form">
                        <input id="searchInput" type="text" placeholder="Ne Aramıştınız?">
                        <button><i class="flaticon-search"></i></button>
                    </form>
                    <div class="searchResult">
                    </div>
                </div>
                <div class="col-xl-4 col-lg-5">
                    <div class="user-panel">
                        <div class="up-item">
                            <i class="flaticon-profile"></i>
                            <a href="#">Sign</a> In or <a href="#">Create Account</a>
                        </div>
                        <div class="up-item">
                            <div class="shopping-card">
                                <i class="flaticon-bag"></i>
                                <span class="sepetMiktar">0</span>
                            </div>
                            <a asp-controller="Cart" asp-action="Index">Alışveriş Sepetim</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="main-navbar">
        <div class="container">
            <!-- menu -->
            <ul class="main-menu">
                <li><a href="/">Home</a></li>
                @foreach (Category c in Model)
                {
                    <li><a href="#">@c.Name</a></li>
                }

                <li><a href="#">Blog</a></li>
                <li><a asp-controller="Contact" asp-action="Index">İletişim</a></li>
            </ul>
        </div>
    </nav>
</header>
